#include <stdio.h>
#include <stdarg.h>
#include <stdlib.h>
#include <unistd.h>
#include <errno.h>
#include <string.h>
#include <netdb.h>
#include <sys/types.h>
#include <netinet/in.h>
#include <sys/socket.h>
#include <stdbool.h>
#include <assert.h>
#include <time.h>

#define PORT 6667
#define RECV_BUF_LEN 1024
#define MAX 50

int element;
int top;
char rev[max];
int IfEmpty;
int IfFull;
void push(char element);
char pop();

void main()
{

char rev[50];
int count;
printf("Please enter a string: ");
scanf("%s", rev);
for(count = 0; count < strlen(rev); count++)
{
push(rev[count]);
}
for(count = 0; count < strlen(rev); count++)
{
rev[count] = pop();
}
printf("%s", rev);
}

void push(char element)
{
if(IfFull())
{
printf("Stack Overflow Error");
}
else
{
top = top +1;
rev[top] = element;
}
}

char pop()
{
if(IfEmpty())
{
printf("Stack is empty");
return 1;
}
else
{
element = rev[top];
top - top -1;
return element;
}
}

int IfEmpty()
{
if(top == -1)
return 1;
else
return 0;
}

int IfFull()
{
if (top == max-1)
return 1;
else
return 0;
}
